<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.ASARGamingNetwork" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="android:windowBackground">@color/appbg</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:fontFamily">@font/font</item>

    </style>
    <style name="PopMen" parent="Widget.AppCompat.PopupMenu.Overflow">
        <!-- change menu text color-->
        <item name="android:textColor">@color/white</item>
        <!--change popup menu background color-->
        <item name="popupMenuBackground">@color/_000000</item>

        <item name="android:radius">30dp</item>
        <item name="cardCornerRadius">30dp</item>
        <item name="cornerRadius">30dp</item>
    </style>

    <style name="CustomShapeAppearance">
        <!--        <item name="neumorph_cornerSize">32dp</item>-->

        <!-- Or if wants different radii depending on the corner. -->
        <item name="neumorph_cornerSizeTopLeft">7dp</item>
        <item name="neumorph_cornerSizeTopRight">7dp</item>
        <item name="neumorph_cornerSizeBottomLeft">7dp</item>
        <item name="neumorph_cornerSizeBottomRight">7dp</item>
    </style>
</resources>