<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- Background track (unfilled part) -->
    <item android:id="@android:id/background">
        <shape>
            <corners android:radius="8dp"/> <!-- Round corners for the track -->
            <size android:height="10dp"/>    <!-- Increase the height of the background track -->
            <solid android:color="@android:color/white"/> <!-- Unfilled track color -->
        </shape>
    </item>

    <!-- Progress (filled part) -->
    <item android:id="@android:id/progress">
        <clip>
            <shape>
                <corners android:radius="8dp"/>
                <size android:height="10dp"/>    <!-- Increase the height of the progress bar -->
                <solid android:color="@android:color/holo_blue_light"/> <!-- Filled track color -->
            </shape>
        </clip>
    </item>
</layer-list>
